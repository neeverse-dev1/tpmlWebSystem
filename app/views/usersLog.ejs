<div class="col-lg-12">
  <div class="card overflow-hidden">
    <div class="card-header d-flex align-items-center justify-content-between">
      <h6 class="card-title mb-0">사용자 로그</h6>
    </div>
    <div class="card-body p-0 pb-2">
      <table id="logTable" class="table table-striped table-bordered table-hover display">
        <thead class="table-dark">
          <tr>
            <th class="minw-200px">시간</th>
            <th class="minw-150px">사용자 ID</th>
            <th class="minw-200px">작업</th>
            <th class="minw-150px">IP 주소</th>
          </tr>
        </thead>
        <tbody>
        <% logList.forEach(log => { %>
          <tr>
            <td><%= new Date(log.created_at).toLocaleString() %></td>
            <td><%= log.userid %></td>
            <td><%= log.action %></td>
            <td><%= log.ip_address %></td>
          </tr>
        <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>