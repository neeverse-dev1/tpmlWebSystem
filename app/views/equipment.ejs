<div class="container">
  <div class="row">
    <!-- 테이블 영역 -->
    <div class="col-8">
      <h4>장비 목록</h4>
      <table id="equipmentTable" class="table table-striped table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>모델명</th>
            <th>전압</th>
            <th>신호</th>
          </tr>
        </thead>
        <tbody>
          <% equipmentList.forEach(eq => { %>
            <tr class="equipment-row" data-id="<%= eq.equipment_id %>" data-model="<%= eq.model_name %>" data-voltage="<%= eq.voltage %>" data-signal="<%= eq.signal_strength %>" data-gps="<%= eq.gps_lat %>, <%= eq.gps_long %>">
              <td><%= eq.equipment_id %></td>
              <td><%= eq.model_name %></td>
              <td><%= eq.voltage %>V</td>
              <td><%= eq.signal_strength %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- 디테일 영역 -->
    <div class="col-4">
      <h4>장비 상세</h4>


      <div id="map" style="height: 300px;" class="mt-3"></div>
      <table class="table table-bordered mt-3">
        <tbody>
            <tr><th>ID</th><td id="detail-id">-</td></tr>
            <tr><th>모델명</th><td id="detail-model">-</td></tr>
            <tr><th>전압</th><td id="detail-voltage">-</td></tr>
            <tr><th>신호</th><td id="detail-signal">-</td></tr>
            <tr><th>GPS</th><td id="detail-gps">-</td></tr>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>
